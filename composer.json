{
    "name": "php-translation/platform-adapter",
    "description": "Adapters for different translation platforms",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "php-translation/common": "dev-master",
        "api-php/localise.biz": "^0.1"

    },
    "require-dev": {
        "phpunit/phpunit": "^4.5 || ^5.4"
    },
    "autoload": {
        "psr-4": {
            "Translation\\PlatformAdapter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Translation\\PlatformAdapter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}

