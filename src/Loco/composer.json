{
    "name": "php-translation/loco-adapter",
    "description": "Adapter for loco.",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "php-translation/common": "^0.1",
        "api-php/localise.biz": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.5 || ^5.4",
        "nyholm/symfony-bundle-test": "^1.0",
        "php-http/curl-client": "^1.6",
        "guzzlehttp/psr7": "^1.3",
        "php-http/message": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Translation\\PlatformAdapter\\Loco\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Translation\\PlatformAdapter\\Loco\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
